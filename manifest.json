{
  "manifest_version": 3,
  "name": "Google Docs Labels",
  "version": "1.6",
  "description": "Adds a Labels section to Google Docs left sidebar for organizing and categorizing documents",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
